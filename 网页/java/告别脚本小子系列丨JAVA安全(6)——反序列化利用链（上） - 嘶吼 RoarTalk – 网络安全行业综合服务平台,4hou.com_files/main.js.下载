$(document).ready(function(){


    $(".information li").children("p").on("click",function(){
        $(this).siblings("div").stop(true,true).slideToggle();
        $(this).parents("li").siblings("li").children("div").slideUp();
    });
//    resize
    $(".side_top").on("click",function(){
        $('html,body').animate({scrollTop: '0px'}, 500);
    });
    var phonemove=$("#yyjrmove").height();
    var phonetime=phonemove
    $("#yyjrmove").animate({scrollTop:-phonemove+380},phonetime);

    $(".new_right_top").hover(function(){
        $(this).find(".swiper-scrollbar").addClass("yyjrhover")
    },function(){
        $(this).find(".swiper-scrollbar").removeClass("yyjrhover")
    });
    $(".new_right_cen").hover(function(){
        $(this).find(".swiper-scrollbar").addClass("yyjrhover")
    },function(){
        $(this).find(".swiper-scrollbar").removeClass("yyjrhover")
    });
});
